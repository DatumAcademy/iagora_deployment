# Default server configuration.
server {
	listen {{ nginx_port }} default_server;
	listen [::]:{{ nginx_port }} default_server;

	# Pass 404 pages to Moodle so they can be themed.
	error_page 404 /error/index.php;
	error_page 403 =404 /error/index.php;

	# Hide all dot files but allow "Well-Known URIs" as per RFC 5785
	location ~ /\.(?!well-known).* {
		return 404;
	}	

	# Pass PHP scripts to FastCGI server.
	location ~ [^/]\.php(/|$) {
		fastcgi_split_path_info ^(.+\.php)(.*)$;
		fastcgi_pass unix:/run/php/php8.3-fpm.sock;
		include /etc/nginx/mime.types;
		# include snippets/fastcgi-php.conf;
		include fastcgi_params;
		fastcgi_param PATH_INFO $fastcgi_path_info;
		fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
	}

	# Don't allow direct access to various internal directories. See MDL-69333.
	location ~ (/behat/|/fixtures/|/node_modules/|/vendor/) {
		deny all;
		return 404;
	}

	# Don't allow direct access to various internal documentation. See MDL-69333.
	location ~ (/readme|/README|readme\.txt|/upgrade\.txt|/UPGRADING\.md) {
		deny all;
		return 404;
	}

	# Don't allow direct access to various internal files. See MDL-69333.
	location ~ (composer\.json|db/install\.xml|phpunit\.xml|\.lock|environment\.xml) {
		deny all;
		return 404;
	}

    index index.php index.html index.htm index.nginx-debian.html;

	root {{ moodle_install_path }};

	server_name _;
}

